<% content_for :title, "Beer clubs" %>

<h1>Beer clubs</h1>

<div id="beer_clubs">
    <table class = "table table-hover">
        <thead>
            <tr>
                <th><%= link_to "Name", beer_clubs_path(order: "name")%></th>
                <th><%= link_to "Founded", beer_clubs_path(order: "founded")%></th>
                <th><%= link_to "City", beer_clubs_path(order: "city")%></th>
                <th><%= link_to "Members", beer_clubs_path(order: "members")%></th>
            </tr>
        </thead>
        <tbody>
            <% @beer_clubs.each do |beer_club| %>
                <tr id="<%= dom_id beer_club %>">
                    <td><%= link_to beer_club.name, beer_club  %></td>
                    <td><%= beer_club.founded %></td>
                    <td><%= beer_club.city %></td>
                    <td>
                        <% if beer_club.memberships.empty? %>
                            no members
                        <% else %>
                            <%= beer_club.memberships.count %> <%= "member".pluralize(beer_club.memberships.count) %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>


<%= link_to("New beer club", new_beer_club_path, class:'btn btn-primary') if current_user %>
